{
  "compilerOptions": {
    "jsx": "react",
    "outDir": "lib",
    "lib": ["es2018"],
    "allowJs": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "ES2018",
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true
  },
  "include": ["src"]
}
