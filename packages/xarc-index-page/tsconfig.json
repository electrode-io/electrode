{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "esModuleInterop": false,
    "importHelpers": true,
    "target": "ES2020",
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "types": ["node", "mocha", "chai", "sinon", "sinon-chai"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "alwaysStrict": false,
    "strictFunctionTypes": true,
    "jsx": "react"
  },
  "include": ["src"]
}
