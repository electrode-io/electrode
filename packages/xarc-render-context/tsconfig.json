{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["es2020"],
    "module": "CommonJS",
    "esModuleInterop": false,
    "target": "ES2020",
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "types": ["node", "mocha"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true
  },
  "typedocOptions": {
    "entryPointStrategy": "expand"
  },
  "include": ["src"]
}
