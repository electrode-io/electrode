{
  "compilerOptions": {
    "outDir": "lib",
    "lib": ["ES2020", "DOM"],
    "module": "CommonJS",
    "esModuleInterop": false,
    "importHelpers": true,
    "target": "ES2020",
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true
  },
  "include": ["src"]
}
